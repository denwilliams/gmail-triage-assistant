# Server
SERVER_PORT=8080
SERVER_HOST=0.0.0.0

# Database (matches docker-compose service name)
DATABASE_URL=postgres://gmail_triage:changeme@db:5432/gmail_triage?sslmode=disable

# Google OAuth
GOOGLE_CLIENT_ID=your-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-client-secret
GOOGLE_REDIRECT_URL=https://your-tunnel-hostname.example.com/auth/callback

# OpenAI
OPENAI_API_KEY=sk-...
OPENAI_MODEL=gpt-4o-mini

# Session security â€” generate with: openssl rand -hex 32
SESSION_SECRET=replace-with-64-char-hex-string

# Gmail push notifications (leave empty / set PUSH_NOTIFICATIONS_ENABLED=false to use polling instead)
PUBSUB_VERIFICATION_TOKEN=replace-with-random-token
PUBSUB_TOPIC=projects/YOUR-GCP-PROJECT/topics/gmail-triage
PUSH_NOTIFICATIONS_ENABLED=true

# Gmail polling (only used if PUSH_NOTIFICATIONS_ENABLED=false)
GMAIL_CHECK_INTERVAL=5
